<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sevak.themaze.MazeBuilder"
    android:background="@android:color/holo_green_light"
    android:id="@+id/TheBegin">

    <HorizontalScrollView
        android:id="@+id/HorV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MenuBarScr"
        android:minHeight="600dp"
        android:minWidth="390dp">

        <ScrollView
            android:id="@+id/VertV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="600dp"
            android:minWidth="390dp"
            android:background="@android:color/holo_green_light">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/Cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/workspace"
                    android:minHeight="600dp"
                    android:minWidth="390dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/HArL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="60dp"
                        app:srcCompat="@drawable/arrow_left" />

                    <ImageView
                        android:id="@+id/HArR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="100dp"
                        app:srcCompat="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/HCounter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="80dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="5dp"
                        android:text="Height"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"
                        android:id="@+id/textView3" />

                    <ImageView
                        android:id="@+id/WArL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="60dp"
                        app:srcCompat="@drawable/arrow_left" />

                    <ImageView
                        android:id="@+id/WArR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="100dp"
                        app:srcCompat="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/WCounter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="80dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="7dp"
                        android:text="Width"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"
                        android:id="@+id/textView2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/AddNEWView"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="140dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/addwall1uppr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/wall1uppr" />

                        <ImageView
                            android:id="@+id/addwall1downpr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/wall1downpr" />

                        <ImageView
                            android:id="@+id/addriverleft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/riverleft" />

                        <ImageView
                            android:id="@+id/addriverdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/riverdown" />

                        <ImageView
                            android:id="@+id/addriverright"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/riverright" />

                        <ImageView
                            android:id="@+id/addriverup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/riverup" />

                        <ImageView
                            android:id="@+id/addwall1leftpr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/wall1leftpr" />

                        <ImageView
                            android:id="@+id/addwall1rightpr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/wall1rightpr" />

                        <ImageView
                            android:id="@+id/addteleport1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/teleport1" />

                        <ImageView
                            android:id="@+id/addme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/milkiipidoras" />

                        <ImageView
                            android:id="@+id/addexitup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitup" />

                        <ImageView
                            android:id="@+id/addexitright"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitright" />

                        <ImageView
                            android:id="@+id/addexitdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitdown" />

                        <ImageView
                            android:id="@+id/addexitleft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitleft" />

                        <ImageView
                            android:id="@+id/addminotaur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/minotavr" />

                        <ImageView
                            android:id="@+id/addhospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/hospital" />

                        <ImageView
                            android:id="@+id/addbfg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bfg" />

                        <ImageView
                            android:id="@+id/addbullet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bullet" />

                        <ImageView
                            android:id="@+id/addkey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/key" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/DelAView"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="140dp"
                        android:orientation="vertical">

                    <ImageView
                        android:id="@+id/delwall1uppr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/wall1uppr" />

                    <ImageView
                        android:id="@+id/delwall1downpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/wall1downpr" />

                    <ImageView
                        android:id="@+id/delriverleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/riverleft" />

                    <ImageView
                        android:id="@+id/delriverdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/riverdown" />

                    <ImageView
                        android:id="@+id/delriverright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/riverright" />

                    <ImageView
                        android:id="@+id/delriverup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/riverup" />

                    <ImageView
                        android:id="@+id/delwall1leftpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/wall1leftpr" />

                    <ImageView
                        android:id="@+id/delwall1rightpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/wall1rightpr" />

                    <ImageView
                        android:id="@+id/delteleport1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/teleport1" />

                        <ImageView
                            android:id="@+id/delme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/milkiipidoras" />

                        <ImageView
                            android:id="@+id/delexitup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitup" />

                        <ImageView
                            android:id="@+id/delexitright"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitright" />

                        <ImageView
                            android:id="@+id/delexitdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitdown" />

                        <ImageView
                            android:id="@+id/delexitleft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/exitleft" />

                        <ImageView
                            android:id="@+id/delminotaur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/minotavr" />

                        <ImageView
                            android:id="@+id/delhospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/hospital" />

                        <ImageView
                            android:id="@+id/delbfg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bfg" />

                        <ImageView
                            android:id="@+id/delbullet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bullet" />

                        <ImageView
                            android:id="@+id/delkey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/key" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/HCounter"
                        android:layout_alignRight="@+id/HCounter"
                        android:layout_marginTop="80dp"
                        android:text="Cancel"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/HArL"
                        android:layout_centerHorizontal="true"
                        android:text="FINISH" />

                </RelativeLayout>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
